# TimeSyncBot Docker Environment Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (from @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin Telegram IDs (comma-separated, no spaces)
ADMIN_IDS=1234567890,1234567890

# Timezone (affects scheduler jobs)
# Common values: Europe/Moscow, UTC, Europe/London, America/New_York
TZ=Europe/Moscow

# Optional: Override data directory (default: /app/data)
# DATA_DIR=/app/data

# Optional: Override database directory (default: /app/data)
# DB_DIR=/app/data

# Optional: Override logs directory (default: /app/logs)
# LOG_DIR=/app/logs

# Optional: Database names (usually don't need to change)
# DB_NAME=piculi.db
# ANALYTICS_DB_NAME=analytics.db

# Docker resource limits
# DOCKER_CPU_LIMIT=1
# DOCKER_MEMORY_LIMIT=512M
